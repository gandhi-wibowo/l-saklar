<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#2b87c5" />
        <gradient  android:angle="-90"  android:startColor="#056aa1" android:endColor="#088ad6"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#2b8ac5" />
        <solid  android:color="#1ea3e0"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="3dip" />
        <stroke android:width="1dip" android:color="#2b8dc5" />
        <gradient  android:angle="-90"  android:startColor="#52bdff" android:endColor="#1e99e0" />
    </shape>
</item>
</selector>